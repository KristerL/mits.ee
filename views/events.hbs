<section id="events">
    <div class="container">
        <div class="content">
            <h1>Tulevased 端ritused</h1>
            <div class="eventgrid">
                {{# each new_events}}
                    <div class="event">
                        <img class="thumbnail" src="{{this.image_url}}" alt="event cover">
                        <div class="meta">
                            <h3 class="title">{{this.title}}</h3>
                            <div class="date"><span class="icon clock"></span><time datetime="{{moment this.date null}}">{{moment this.date "LLLL"}}</time></div>
                            {{#if this.location }}<div class="location"><span class="icon marker"></span>{{this.location}}</div>{{/if}}
                        </div>
                        <div class="links"><a class="btn" href="/端ritused/{{this.event_id}}">Lisainfo</a> <a class="btn fb" href="https://facebook.com/events/{{this.event_id}}/">Facebook</a></div>
                    </div>
                {{/each}}
            </div>
            <h1>Toimunud 端ritused</h1>
            <div class="eventgrid">
                {{# each old_events}}
                    <div class="event">
                        <img class="thumbnail" src="{{this.image_url}}" alt="event cover">
                        <div class="meta">
                            <h3 class="title">{{this.title}}</h3>
                            <div class="date"><span class="icon clock"></span><time datetime="{{moment this.date null}}">{{moment this.date "LLLL"}}</time></div>
                            {{#if this.location }}<div class="location"><span class="icon marker"></span>{{this.location}}</div>{{/if}}
                        </div>
                        <div class="links"><a class="btn" href="/端ritused/{{this.event_id}}">Lisainfo</a> <a class="btn fb" href="https://facebook.com/events/{{this.event_id}}/">Facebook</a></div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>
